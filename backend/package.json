		"eslint-config-prettier": "^8.5.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.7",
		"prettier": "^2.6.2",
		"ts-node": "^10.7.0",
		"ts-node-dev": "^1.1.8",
		"tsconfig-paths": "^3.14.1",
		"typescript": "^4.6.3"
  },
  "lint-staged": {
    "src/**/*.ts":[
      "eslint --fix",
			"prettier --write"
    ]
